<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_feifei"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clyt_middle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/llyt_call_control">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/title_aiui_rapid_interact"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcyc_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scrollbars="vertical"
            android:padding="10dp"
            android:background="@drawable/bg_rect_radius_10dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_clear_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_records"
            app:layout_constraintBottom_toBottomOf="@+id/rcyc_chat"
            app:layout_constraintEnd_toEndOf="@+id/rcyc_chat"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clyt_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_90"
        android:visibility="invisible"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/ic_header_feifei"
            android:background="@drawable/bg_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/llyt_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/swt_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>

        </LinearLayout>

        <com.iflytek.aiui.demo.chat.ui.VoiceIndicator
            android:id="@+id/vi_feifei"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <ScrollView
            android:id="@+id/scv_cur_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="180dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            tools:background="@color/orangey_red"
            app:layout_constraintTop_toBottomOf="@+id/vi_feifei"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_user_words"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="你会干什么？"/>

                <TextView
                    android:id="@+id/txt_feifei_ans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="我会跟你聊天，解答你的问题。"/>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llyt_call_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.iflytek.aiui.demo.chat.ui.ToggleImageButton
                android:id="@+id/tib_call"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_call"/>

            <TextView
                android:id="@+id/txt_tip_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/click_to_talk"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_user_voice_indicator"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            tools:visibility="visible">

            <com.iflytek.aiui.demo.chat.ui.VoiceIndicator
                android:id="@+id/vi_user"
                android:layout_width="80dp"
                android:layout_height="60dp"/>

        </LinearLayout>

        <com.iflytek.aiui.demo.chat.ui.ToggleImageButton
            android:id="@+id/tib_mic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_mic_normal"
            tools:visibility="visible"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>